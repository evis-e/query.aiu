<li id="post-<%= post.id %>">
  <span class="user"><%= link_to post.user.username, post.user %></span>
  <span class="content"><%= post.title %></span>
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
</li>
